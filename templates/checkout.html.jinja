<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body>
    {% include "components/navbar.html.jinja" %}
    {% for x in cart %}
    <div class="border p-4 m-4 grid grid-cols-2 gap-4 max-w-xl">
      
      <img class="max-h-48 max-w-40 object-cover" src="{{ x['Image'] }}" />
      <div class="flex flex-col justify-between">
        <div>
          <p class="font-semibold text-lg">{{ x["Name"] }}</p>
          <p class="text-gray-700">${{ x["Cost"] }}</p>
          <p class="text-gray-700">Size: {{ x["Size"] }}</p>
        </div>

      

        <p class="mt-4 text-xl font-bold">
          Total: ${{ x['Cost'] * x['Quantity'] }}
        </p>
      </div>
      
    <div class="text-center mt-3 ml-300">
  <form action="/checkout" method="post">
    <button 
      type="submit" 
      class="px-6 py-3 bg-green-600 text-white text-2xl font-bold italic rounded"
    >
      Place Order
    </button>
  </form>
</div>
</div>
<div>
      <form class="grid-cols-2" method="post"> 
          <label>Address</label>
          <input>

          <label>Card Information</label>
          <input>
      </form>
      </div>
    {% endfor %}

  </body>
</html>
