<!doctype html>
<html lang="en">
<head>
 <meta charset="UTF-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
 <title>Prime Kicks</title>
</head>


<body class=" bg-gray-800 min-h-screen text-gray-200">


{% include "components/navbar.html.jinja" %}
  <main class="max-w-6xl mx-auto px-6 py-10">
    <h1 class="text-3xl font-bold mb-8">My Orders</h1>

{% if order|length > 0 %}
  <div class="space-y-6">

{% for item in order %}
  <div class="bg-gray-800 rounded-xl shadow-lg p-6">
    <div class="flex justify-between items-center border-b border-gray-600 pb-4 mb-4">
      <div>
        <p class="font-semibold">Order # {{item['ID']}}</p>
          <p class="text-sm text-gray-400"></p>
    </div>
    Placed on {{item["Timestamp"].strftime("%b %d")}}
    
    <div class="text-right">
      <p class="font-bold text-blue-400">total: $ {{item["Cost"]}}</p>
        <p class="text-sm text-gray-400"></p>
    </div>
  </div> 
      <p class="font-bold text-blue-400">items: {{item["Quantity"]}}</p>
</div>
{% endfor %}


     </div>

  
   {% else %}
    
     <div class="flex flex-col items-center justify-center mt-24 text-center">
       <h2 class="text-3xl font-bold mb-4">No orders yet</h2>

       <a href="/browse"
          class="bg-purple-400 px-6 py-3 rounded-lg text-white hover:bg-blue-700 transition">
         Start Shopping
       </a>
     </div>


   {% endif %}


 </main>


</body>
</html>



