<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    
  </head>
  <body>
  {% include "components/navbar.html.jinja" %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center">
  <div class="p-10 mx-auto md:w-full md:max-w-md">

    <h1 class="font-bold text-center text-2xl mb-5">LOGIN</h1>  
    <div class="bg-white shadow w-150 justify-items-center rounded-lg ">
      <div class="px-5 py-7">

        <label class="font-semibold text-sm text-gray-600 pb-1">E-mail</label>
        <input type="text" class="border-1 rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" />

        <label class="font-semibold text-sm text-gray-600 pb-1">Password</label>
        <input type="text" class="border-1 rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" />

        <button type="button" class="bg-blue-500 focus:bg-blue-700 focus:ring-2 text-white w-full py-2.5 text-md shadow-sm font-semibold text-center">
            <span class="inline-block mr-2">Login</span>
        </button>

      </div>

      <div class="py-4">
        <div class="grid grid-cols-2 gap-1">
          <div class="text-center whitespace-nowrap">
            
            <button class="mx-3 px-3 py-2 cursor-pointer font-sans text-sm rounded-lg text-gray-500 hover:bg-gray-100 focus:ring-2 focus:ring-gray-400">
                <span class="inline-block ml-49">Forgot Password</span>
            </button>
            <p class="hover:bg-gray-100 focus:ring-2 focus:ring-gray-400">Don't have an account? <a href="{{ url_for('signup') }}">Sign up here</a></p>
          </div>
        </div>
      </div>
    </div>
    <div class="py-5">
        <div class="grid grid-cols-2 gap-1">
          <div class="text-center sm:text-left whitespace-nowrap">

            <button class="mx-3 px-3 py-2 cursor-pointer font-normal text-sm rounded-lg text-gray-500 hover:bg-gray-200 focus:ring-2 focus:ring-gray-400"> 
            </button>
          </div>
        </div>
      </div>
  </div>
</div>



  </body> 
</html>